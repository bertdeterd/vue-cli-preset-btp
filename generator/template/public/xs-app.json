{
    "welcomeFile": "/index.html",
    "routes": [
      {
        "source": "/api/sap/(.*)",
        "target": "/sap/$1",
        "destination": "<DESTINATION TO YOUR BACKEND>"
      },
      {
        "source": "^/bpmworkflowruntime/(.*)$",
        "target": "/$1",
        "service": "com.sap.bpm.workflow",
        "endpoint": "workflow_rest_url",
        "authenticationType": "xsuaa"
      },
      {
        "source": "^(.*)",
        "target": "$1",
        "authenticationType": "xsuaa",
        "service": "html5-apps-repo-rt"
      }
    ]
  }